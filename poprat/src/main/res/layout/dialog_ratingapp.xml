<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#00ffffff"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_centerInParent="true"
        android:layout_margin="5dp"
        app:cardCornerRadius="5dp"
        app:cardBackgroundColor="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/dialogratingapp_tv_pesan"
                android:layout_marginTop="10dp"
                android:textAlignment="center"
                android:textSize="16.5dp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/bagaimana_penilaianmu"/>

            <RatingBar
                android:id="@+id/dialogratingapp_ratbar_1"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:numStars="5"
                android:stepSize="1"
                android:layout_gravity="center"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:layout_marginBottom="15dp"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:gravity="center"
                    android:id="@+id/dialogratingapp_tv_aksitidak"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimary"
                    android:text="@string/tidak"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>
                <TextView
                    android:gravity="center"
                    android:id="@+id/dialogratingapp_tv_aksiiya"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimary"
                    android:text="@string/iya"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>

            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>


</RelativeLayout>